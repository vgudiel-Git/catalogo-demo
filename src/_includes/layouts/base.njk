<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/assets/css/main.css">
</head>
<body>
  <header>
    <div class="header-inner">
      <h1><a href="/">Mi Catálogo</a></h1>
      <nav>
        <ul class="main-menu">
          <li class="dropdown">
            <a href="#" class="categories-link" onclick="event.preventDefault(); return false;">Ofertas del Mes</a>
            <ul class="dropdown-menu categories-menu">
              <!-- Menú completo para desktop -->
              <div class="desktop-menu">
                <li>
                  <a href="/#ofertas" class="category-link">
                    Ofertas del Mes
                  </a>
                </li>
                {% for category in categories %}
                  <li>
                    <a href="/#{{ category.value }}" class="category-link">
                      {{ category.label }}
                    </a>
                  </li>
                {% endfor %}
              </div>
              <!-- Menú simplificado para móvil -->
              <div class="mobile-menu">
                <li>
                  <a href="/#ofertas" class="category-link">
                    Ofertas del Mes
                  </a>
                </li>
              </div>
            </ul>
          </li>
        </ul>
      </nav>
      <button class="hamburger-button" aria-label="Toggle Menu">
        <span class="hamburger-bar"></span>
        <span class="hamburger-bar"></span>
        <span class="hamburger-bar"></span>
      </button>
    </div>
  </header>

  <main>
    {{ content | safe }}
  </main>

  <footer>
    <p>&copy; <script>document.write(new Date().getFullYear())</script> Mi Catálogo</p>
  </footer>

  <!-- Script de Netlify Identity para redirección -->
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const categoriesLink = document.querySelector('.categories-link');
      const hamburgerButton = document.querySelector('.hamburger-button');
      const categoriesMenu = document.querySelector('.categories-menu');

      const toggleCategoriesMenu = (event) => {
        event.stopPropagation(); // Prevent this click from immediately closing the menu
        categoriesMenu.classList.toggle('open');
        hamburgerButton.classList.toggle('active');
      };

      // Event listeners for both buttons
      categoriesLink.addEventListener('click', toggleCategoriesMenu);
      hamburgerButton.addEventListener('click', toggleCategoriesMenu);

      // Close the menu if the user clicks anywhere else on the page
      document.addEventListener('click', (event) => {
        if (categoriesMenu.classList.contains('open') && 
            !categoriesMenu.contains(event.target) && 
            event.target !== categoriesLink && 
            event.target !== hamburgerButton) {
          categoriesMenu.classList.remove('open');
          hamburgerButton.classList.remove('active');
        }
      });

      // Cerrar el menú después de hacer clic en un enlace de categoría
      const categoryLinks = document.querySelectorAll('.category-link');
      categoryLinks.forEach(link => {
        link.addEventListener('click', () => {
          categoriesMenu.classList.remove('open');
          hamburgerButton.classList.remove('active');
        });
      });
    });
  </script>
</body>
</html>